<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:id="@+id/highscorecard_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        facebook:preset_size="CUSTOM"
        android:layout_toRightOf="@id/highscorecard_place"
        android:layout_toEndOf="@id/highscorecard_place"
        android:id="@+id/highscorecard_picture">
    </com.facebook.login.widget.ProfilePictureView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/highscorecard_picture"
        android:layout_toEndOf="@id/highscorecard_picture"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/highscorecard_username"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/highscorecard_username"
            android:id="@+id/highscorecard_score"/>
    </RelativeLayout>
</RelativeLayout>